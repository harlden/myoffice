<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
        style="@style/Theme.MyOffice.ItemBox">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="start">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_account_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="6dp">

        <TextView
            android:id="@+id/employer_action_fio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:text="test"/>

        <TextView
            android:id="@+id/employer_action_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#87262626"
            android:textStyle="italic"
            android:maxLines="1"
            android:text="Lorem Ipsum is simply dummy text of"/>

        <TextView
            android:id="@+id/employer_date_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#87262626"
            android:textStyle="italic"
            android:maxLines="1"
            android:text="Lorem Ipsum is simply dummy text of"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/employer_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pencil_foreground"
            android:contentDescription=""
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/employer_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_busket_foreground"
            android:contentDescription=""
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>