<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyOffice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/main_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/main_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
    
    <style name="Theme.MyOffice.MainText">
        <item name="android:textColor">@color/main_grey</item>
    </style>

    <style name="weekText" parent="Widget.AppCompat.TextView" >
        <item name="fontFamily">@font/helv</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MyOffice.ItemBox">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.MyOffice.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/main_grey</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>